@model ShoppingCartVM

@{
    ViewData["Title"] = "Shopping cart summary";
}

<div class="row">
    <!-- LEFT: Shopping cart table -->
    <div class="col-md-8 ">
        <div class="text-center mb-3">
            <h2>You shopping cart summary</h2>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Selected amount</th>
                    <th>Movie</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.ShoppingCart.ShoppingCartItems)
                {
                     <tr>
                        <td class="align-middle">@item.Amount</td>
                        <td class="align-middle">@item.Movie.Name</td>
                        <td class="align-middle">@item.Movie.Price.ToString("c")</td>
                        <td class="align-middle">@((item.Amount*item.Movie.Price).ToString("c"))</td>
                        <td class="align-middle">
                            <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart"
                               asp-route-id="@item.Movie.Id">
                                <i class="bi bi-cart-dash"></i>
                            </a>

                            <a class="text-success" asp-controller="Orders" asp-action="AddItemToShoppingCart"
                               asp-route-id="@item.Movie.Id">
                                <i class="bi bi-cart-plus"></i>

                            </a>

                        </td>
                     </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td><b>Total:</b></td>
                    <td>
                        @Model.ShoppingCartTotal.ToString("c")
                    </td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

     </div>

    <!-- RIGHT: Payment box -->
    <div class="col-md-4">

        <div class="card shadow-sm p-3">

            <h5 class="text-center mb-3">Payment Options</h5>

            <div class="d-flex flex-column gap-2">

                @if (Model.ShoppingCart.ShoppingCartItems.Count == 0)
                {
                    <button class="btn btn-secondary w-100" disabled>
                        Cart is empty
                    </button>
                }
                else
                {
                    <!-- PayPal -->
                    <div class="paypal-pill-container mb-2">
                        <div id="paypal-btn"></div>
                    </div>
                    

                    <!-- Cash -->
                    <a class="btn w-100 rounded-pill py-2 fw-semibold payment-pill cash-pill"
                       asp-controller="Orders"
                       asp-action="CompleteOrder"
                       asp-route-paymentMethod="COD">
                        <i class="bi bi-cash me-2"></i> Cash on Delivery
                    </a>

                    <!-- EWallet -->
                    <a class="btn w-100 rounded-pill py-2 fw-semibold payment-pill wallet-pill"
                       asp-controller="Orders"
                       asp-action="EWallet">
                        <i class="bi bi-phone me-2"></i> Pay with E-Wallet
                    </a>

                    <hr />

                    <!-- Total -->
                    <h4 class="text-center text-success fw-bold">
                        Total: @Model.ShoppingCartTotal.ToString("c")
                    </h4>

                    <!-- Add more items -->
                    <a class="btn w-100 rounded-pill py-2 fw-semibold add-pill"
                       asp-controller="Movies"
                       asp-action="Index">
                        Add more items
                    </a>
                }

            </div>

        </div>

    </div>
    
</div>

@section Scripts {

    <script src="https://www.paypalobjects.com/api/checkout.js"></script>

    <script>

        let _total = @Html.Raw(Model.ShoppingCartTotal);

        paypal.Button.render({
            //Configure environment
            env: 'sandbox',
            client: {
                sandbox: 'AcKRtgL4i68EZ2ZYuYUx3ilihAg2YhL5dtF_m19A8MjBWVOn6ewNS4M_uV8gA3xi98zTcUq38gUHbVFx'
            },

            //Customize button
            locale: 'en_US',
            style: {
                size: 'responsive',
                color: 'gold',
                shape: 'pill',
                label: 'paypal',
                tagline: false
            },
            commit: true,

            //Set up a payment
            payment: function (data, actions) {
                return actions.payment.create({
                    transactions: [{
                        amount: {
                            total: _total,
                            currency: 'USD'
                        }
                    }]
                });
            },

            //Execute the payment
            onAuthorize: function (data, actions) {
                return actions.payment.execute().then(function () {
                    var url = '@Url.Action("CompleteOrder", "Orders", new { paymentMethod = "PayPal" })';
                    window.location.href = url;
                });
            }

        }, '#paypal-btn')
    </script>
}
<style>

    /* base */
    .payment-pill {
        border: none;
        transition: all 0.25s ease;
        color: white;
    }

    .paypal-pill-container {
        background: linear-gradient(135deg,#ffc439,#ffb347);
        padding: 6px;
        border-radius: 50px;
        transition: all 0.25s ease;
    }

        .paypal-pill-container:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(255,196,57,0.35);
        }

    /* يخلى الزرار ياخد العرض كله */
    #paypal-btn iframe {
        width: 100% !important;
        border-radius: 50px !important;
    }

    /* Cash */
    .cash-pill {
        background: linear-gradient(135deg,#00c853,#009624);
    }

        .cash-pill:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0,200,83,0.35);
        }

    /* Wallet */
    .wallet-pill {
        background: linear-gradient(135deg,#7b1fa2,#512da8);
    }

        .wallet-pill:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(123,31,162,0.35);
        }

    /* Add more */
    .add-pill {
        background: white;
        border: 2px solid #dee2e6;
        color: #495057;
    }

        .add-pill:hover {
            background: #f8f9fa;
            transform: translateY(-2px);
        }

    /* PayPal container fix */
    #paypal-btn {
        border-radius: 50px;
        overflow: hidden;
    }

</style>
