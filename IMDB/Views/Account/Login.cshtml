@model Login
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>IMDB Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>

    <div class="login-wrapper">
        <div class="login-card">
            <h2 class="title">🎬 IMDB Login</h2>
            <p class="subtitle">Login to continue</p>

            <form method="post">
                <div class="input-group">
                    <input asp-for="UserName" type="text" placeholder="Username or Email" />
                </div>

                <div class="input-group">
                    <input asp-for="Password" type="password" placeholder="Password" />
                </div>
                <div class="form-check text-start mt-2">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label text-white">
                        Remember Me
                    </label>
                </div>

                <button type="submit" class="login-btn">
                    <span>Login</span>
                </button>

                <!-- Divider -->
                <div class="divider">
                    <span>OR</span>
                </div>

                <!-- Social Login -->
                <div class="social-login">
                    <button type="button" class="social-btn facebook">
                        <i class="bi bi-facebook"></i> Continue with Facebook
                    </button>

                    <button type="button" class="social-btn google">
                        <i class="bi bi-google"></i> Continue with Google
                    </button>

                    <button type="button" class="social-btn twitter">
                        <i class="bi bi-twitter"></i> Continue with Twitter
                    </button>
                    <button type="button" class="social-btn github">
                        <i class="bi bi-github"></i> Continue with Github
                    </button>
                </div>


                <p class="register-text">
                    Don't have an account?
                    <a href="/Account/Register">Register</a>
                </p>
            </form>
        </div>
    </div>

</body>
</html>
