@model Cinema

@{
    ViewData["Title"] = Model.Name;
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-6 offset-2">

                <div class="mb-3 text-center">
                    <img id="LogoPreview" class="border-info rounded-circle" style="max-width:170px;" />
                </div>
                <div class="mb-3">
                    <label asp-for="Logo" class="form-label"></label>
                    <input asp-for="Logo" class="form-control" readonly />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pen-fill"></i>Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">ShowAll</a>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();
            output.style.width = "200px";
            output.style.height = "170px";
        })
    </script>
}
