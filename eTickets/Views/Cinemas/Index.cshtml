@model IEnumerable<Cinema>
<link rel="stylesheet" href="~/css/cinema-img.css">

    @{
    ViewData["Title"] = "Cinemas List";
    }

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table   text-center align-middle">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m=>m.Logo)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle"> 
                            <div class="d-flex justify-content-center align-items-center">
                                <img class="cinema-img" src="@item.Logo" alt="@item.Name" />
                            </div>
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td class="text-end">
                             <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                             <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>details</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                          </td>
                    </tr>
                }
            </tbody>


        </table>
    </div>
</div>
<div style="position:fixed; right:25px; bottom: 25px;" class="text-white">
    <a asp-controller="Cinemas" asp-action="Create" class="btn btn-success"><i class="bi bi-plus">Add Cinema</i></a>
</div>